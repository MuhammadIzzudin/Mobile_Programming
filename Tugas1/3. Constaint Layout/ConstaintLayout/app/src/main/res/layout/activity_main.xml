<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="205.5dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Jika hari ini hujan,"
        android:background="#002E46"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="205.5dp"
        android:layout_height="40dp"
        android:background="#E4E4E4"
        android:gravity="center"
        android:text="maka jalanan basah"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="205.5dp"
        android:layout_height="40dp"
        android:background="#541716"
        android:gravity="center"
        android:text="Jika hari ini tidak hujan,"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="205.5dp"
        android:layout_height="40dp"
        android:background="#002E46"
        android:gravity="center"
        android:text="maka jalanan tidak basah"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="205.5dp"
        android:layout_height="40dp"
        android:background="#E4E4E4"
        android:gravity="center"
        android:text="Tapi jika jalanan basah,"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv4"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="205.5dp"
        android:layout_height="40dp"
        android:background="#541716"
        android:gravity="center"
        android:text="Belum tentu karena hujan"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv5"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>